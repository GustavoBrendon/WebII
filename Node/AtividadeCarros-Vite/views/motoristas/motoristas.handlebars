<h1>Motoristas</h1>
<form action="/motoristas/{{#if action }}save{{else}}create{{/if}}" method="post">
    <input type="hidden" name="id" value="{{motorista_editing.id}}">
    <label for="nome">Nome</label><br>
    <input type="text" id="nome" name="nome" value="{{carro_editing.nome}}" required><br><br>

    <label for="país">País</label><br>
    <input type="text" id="país" name="país" value="{{carro_editing.país}}" required><br><br>

    <button>{{#if action }}Editar{{else}}Criar{{/if}}</button>

</form>

<hr>

<table>

    <thead>

        <tr>

            <th>Nome</th>

            <th>País</th>

        </tr>

    </thead>

    <tbody>

        {{#each motoristas}}

        <tr>

            <td>{{this.nome}}</td>

            <td>{{this.país}}</td>

            <td style="display: flex; justify-content: space-evenly;">

                <form action="/motoristas/edit" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Edit</button>

                </form>

                <form action="/motoristas/delete" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Del</button>

                </form>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>